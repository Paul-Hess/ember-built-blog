{{#if updatePostForm}}
  <h3 class="update-post">Update Post</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title class="title"}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author class="author"}}
        </div>

        <div class="form-group">
          <label for="body">Body</label>
          {{input value=body class="body"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image class="image"}}
        </div>

        <div class="form-group">
          <label for="category">Category</label>
          {{input value=category class="category"}}
        </div>

        <button {{action 'update1' post}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updatePostForm'}}>Update</button>
{{/if}}
